{
  "name": "ia-pm-development",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev:web": "pnpm --filter web start",
    "dev:api": "pnpm --filter api start:dev",
    "agent:preflight": "node scripts/agent/validate-governance.mjs preflight",
    "agent:preflight:pwsh": "pwsh -NoProfile -File scripts/agent/preflight.ps1",
    "lint": "pnpm -r --if-present lint",
    "test": "pnpm -r --if-present test",
    "test:e2e:web": "playwright test --config apps/web-e2e/playwright.config.ts",
    "build": "pnpm -r --if-present build",
    "format": "pnpm -r --if-present format"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2"
  }
}
