{
  "name": "ia-pm-development",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev:web": "pnpm --filter web start",
    "dev:api": "pnpm --filter api start:dev",
    "lint": "pnpm -r --if-present lint",
    "test": "pnpm -r --if-present test",
    "build": "pnpm -r --if-present build",
    "format": "pnpm -r --if-present format",
    "linear:mcp": "node scripts/linear/setup-mcp.mjs",
    "linear:check": "node scripts/linear/check-setup.mjs",
    "linear:create": "node scripts/linear/create-issues.mjs --file docs/planning/linear-issues.seed.json",
    "linear:dry-run": "node scripts/linear/create-issues.mjs --file docs/planning/linear-issues.seed.json --dry-run",
    "linear:create:backend": "node scripts/linear/create-issues.mjs --file docs/planning/linear-backend-nest.seed.json",
    "linear:dry-run:backend": "node scripts/linear/create-issues.mjs --file docs/planning/linear-backend-nest.seed.json --dry-run",
    "linear:move": "node scripts/linear/move-issue-state.mjs"
  }
}
